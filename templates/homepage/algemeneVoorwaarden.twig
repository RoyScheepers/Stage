{% extends "html.twig" %}

{% set docTitle = 'Contact pagina' %}

{% set bodyAttributes = {
class: 'ltr'
} %}

{% block head %}
{{ parent() }}
{% endblock %}

{% block header %}
{{ parent() }}
{% endblock %}


{% block body %}


<div class="grid-container">
    {% set algemenevoorwaarden = craft.entries()
    .section('algemenevoorwaarden')
    .limit(10)
    .all() %}
    {% for tekst in algemenevoorwaarden %}

    <div class="card">
        <figure class="card__figure"> </figure>
        <div class="card__body">
            <div class="card__header">
                <h2>
                    {{ entry.title }}
                </h2>
            </div>
            <div class="card__text">
                {{ tekst.Voorwaarden }}
            </div>
        </div>
    </div>
    {% endfor %}

</div>


{% endblock %}