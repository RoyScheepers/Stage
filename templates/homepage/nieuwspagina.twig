<!DOCTYPE html>
<html lang="en-US">

{% include 'head.twig' with {
naam: 'Nieuwspagina'
}%}



<body class="ltr">
    <header>
        <div class="topnav" id="myTopnav">
            {% for navItem in navigation.linkGroup.all() %}
            <ul class="active">
                {{ navItem.customLink.getLink({ class: 'nav-link' }) }}
            </ul>
            {% endfor %}
        </div>
    </header>
    <div id="grid-container">
        {% set nieuwspagina = craft.entries()
        .section('nieuwspagina')
        .limit(10)
        .orderBy('')
        .all() %}

        {% for tekst in nieuwspagina %}

        <div id="styling">
            <div id="main">
                <div class="content">
                    <h1>
                        {{ tekst.title }}
                    </h1>
                    <ul>
                        <p>
                            {{ tekst.nieuwspaginatekst }}
                        </p>
                        <p>
                    </ul>
                </div>
            </div>

        </div>

        {% endfor %}
    </div>
</body>


</html>